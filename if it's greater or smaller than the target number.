#include <stdio.h>

int main() {
    int my_number,user_number;
    my_number=7;
    printf("I have a number in my mind from 0 to 9 Can you guess it?\n");
    printf("enter your guessing number:");
    scanf("%d",&user_number);
    if(my_number==user_number)
    {
        printf("\nyour guess is correctly");
    }
   else if(my_number>user_number)
    {
        printf("\nHint:my number is grearter than your guessing number:%d Try again once..",user_number);
    }
    else
    {
         printf("\nHint:my number is smaller than your guessing number:%d Try again once",user_number);
    }
    return 0;
}
